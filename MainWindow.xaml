<Window x:Class="AudioOutputListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio Output List" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight"
        WindowStyle="None" Background="Black">
    <Grid>
        <!-- Custom Title Bar -->
        <Border Background="Black" Height="30" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
            <TextBlock Text="Audio Output List" Foreground="White" VerticalAlignment="Center" Margin="10"/>
        </Border>
        <ListBox x:Name="AudioDevicesList" Margin="10,40,10,10" Background="Black" Foreground="White"/>
    </Grid>
</Window>
